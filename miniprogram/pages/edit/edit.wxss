/* pages/edit/edit.wxss */
.container {
  padding: 20rpx;
}

.title {
  width: 100%;
  height: 80rpx;
  box-sizing: border-box;
  border: black 1rpx solid;
  text-align:left;
  font-size:40rpx;
  padding-left: 20rpx;
  padding-top:10rpx;
}
.content {
  margin-top: 20rpx;
  width: 100%;
  height: 400rpx;
  box-sizing: border-box;
  border: black 1rpx solid;
  font-size: 32rpx;
  text-align:left;
  padding-left: 20rpx;
  padding-top:20rpx;
}

.footer {
  display: flex;
  align-items: center;
  position: fixed;
  bottom: 0;
  padding: 20rpx;
  width: 100%;
  box-sizing: border-box;
  background: #f1f1f1;
}
.up{
  height:200rpx;
  width:200rpx;
  margin-top: 20rpx;
  margin-left: 20rpx;
}

.words-num {
  flex: 1;
  text-align:left;
  color: #474747;
  font-size: 32rpx;
  padding-left: 30rpx;
}

.send-btn {
  background: #d43c33;
  color: #fff;
  font-size: 24rpx;
  margin-right: 20rpx;
}

